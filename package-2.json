{
  "name": "code-fundi",
  "displayName": "Code Fundi",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:code-fundi-sidebar"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [{
        "id": "code-fundi-sidebar-view",
        "icon": "media/logo.png",
        "title": "Code Fundi"
      }]
    },
    "views": {
      "code-fundi-sidebar-view": [{
        "type": "webview",
        "id": "code-fundi-sidebar",
        "name": "Code Fundi",
        "icon": "media/logo.png",
        "contextualTitle": "Code Fundi"
      }]
    },
    "commands": [{
      "command": "code-fundi.helloWorld",
      "title": "Hello World"
    }],
    "menus": {
      "editor/context": [
          {
            "submenu": "code-fundi.submenu",
            "group": "code-fundi.group",
            "when": "editorHasSelection"
          }
      ],
      "code-fundi.submenu": [
        {
          "command": "code-fundi.helloWorld",
          "group": "code-fundi.group"
        }
      ]
    },
    "submenus": [
      {
        "id": "code-fundi.submenu",
        "label": "âœ¨Code Fundi"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3"
  }
}
